---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardQuestion from '../components/CardQuestion.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import QuestionMeta from '../components/QuestionMeta.astro';
import DateDisplay from '../components/DateDisplay.astro';
import TagList from '../components/TagList.astro';
import DifficultyBadge from '../components/DifficultyBadge.astro';

// Sample data for testing
const sampleQuestion = {
  title: "ما هو Astro وكيف يعمل؟",
  description: "Astro هو إطار عمل حديث لبناء مواقع الويب السريعة مع تحسين الأداء والتحميل الجزئي للمكونات التفاعلية.",
  pubDate: new Date('2024-01-15'),
  updatedDate: new Date('2024-01-20'),
  tags: ['astro', 'web-development', 'javascript', 'performance'],
  difficulty: 'medium' as const
};

const breadcrumbItems = [
  { label: 'الرئيسية', href: '/' },
  { label: 'الأسئلة', href: '/questions' },
  { label: 'ما هو Astro؟' }
];
---

<BaseLayout title="اختبار المكونات" description="صفحة اختبار للمكونات الجديدة">
  <div class="space-y-8">
    <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100">اختبار المكونات</h1>
    
    <!-- Breadcrumbs Test -->
    <section>
      <h2 class="text-xl font-semibold mb-4">مسار التنقل (Breadcrumbs)</h2>
      <Breadcrumbs items={breadcrumbItems} />
    </section>

    <!-- CardQuestion Test -->
    <section>
      <h2 class="text-xl font-semibold mb-4">بطاقة السؤال (CardQuestion)</h2>
      <div class="max-w-md">
        <CardQuestion
          href="/q/what-is-astro"
          title={sampleQuestion.title}
          description={sampleQuestion.description}
          date={sampleQuestion.pubDate}
          tags={sampleQuestion.tags}
          difficulty={sampleQuestion.difficulty}
        />
      </div>
    </section>

    <!-- QuestionMeta Test -->
    <section>
      <h2 class="text-xl font-semibold mb-4">معلومات السؤال الكاملة (QuestionMeta)</h2>
      <QuestionMeta
        pubDate={sampleQuestion.pubDate}
        updatedDate={sampleQuestion.updatedDate}
        tags={sampleQuestion.tags}
        difficulty={sampleQuestion.difficulty}
      />
    </section>

    <!-- Individual Components Tests -->
    <section>
      <h2 class="text-xl font-semibold mb-4">المكونات الفردية</h2>
      
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium mb-2">عرض التاريخ (DateDisplay)</h3>
          <DateDisplay
            pubDate={sampleQuestion.pubDate}
            updatedDate={sampleQuestion.updatedDate}
          />
        </div>

        <div>
          <h3 class="text-lg font-medium mb-2">قائمة الوسوم (TagList)</h3>
          <TagList tags={sampleQuestion.tags} />
        </div>

        <div>
          <h3 class="text-lg font-medium mb-2">شارة الصعوبة (DifficultyBadge)</h3>
          <DifficultyBadge difficulty={sampleQuestion.difficulty} />
        </div>
      </div>
    </section>

    <!-- Component Variations -->
    <section>
      <h2 class="text-xl font-semibold mb-4">تنويعات المكونات</h2>
      
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium mb-2">وسوم بدون روابط</h3>
          <TagList tags={sampleQuestion.tags} linkable={false} />
        </div>

        <div>
          <h3 class="text-lg font-medium mb-2">وسوم محدودة العدد</h3>
          <TagList tags={sampleQuestion.tags} maxTags={2} />
        </div>

        <div>
          <h3 class="text-lg font-medium mb-2">شارة صعوبة بدون تسمية</h3>
          <DifficultyBadge difficulty="hard" showLabel={false} />
        </div>

        <div>
          <h3 class="text-lg font-medium mb-2">تاريخ بدون أيقونات</h3>
          <DateDisplay
            pubDate={sampleQuestion.pubDate}
            showIcons={false}
          />
        </div>
      </div>
    </section>
  </div>
</BaseLayout>