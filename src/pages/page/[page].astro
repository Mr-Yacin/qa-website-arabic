---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import CardQuestion from '../../components/CardQuestion.astro';
import { paginate } from '../../lib/paginate';

export async function getStaticPaths() {
  // Get all Q&A entries and sort by publication date (newest first)
  const allQuestions = await getCollection('qa');
  const sortedQuestions = allQuestions.sort((a, b) => 
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  );

  const itemsPerPage = 10;
  const totalPages = Math.ceil(sortedQuestions.length / itemsPerPage);
  
  // Generate paths for all pages except page 1 (which redirects to /)
  const paths = [];
  for (let i = 2; i <= totalPages; i++) {
    const paginationResult = paginate(sortedQuestions, i, itemsPerPage);
    paths.push({
      params: { page: i.toString() },
      props: { 
        paginationResult,
        allQuestions: sortedQuestions
      }
    });
  }
  
  return paths;
}

const { page } = Astro.params;
const { paginationResult, allQuestions } = Astro.props;

// Handle page 1 redirect - this should be handled at the server level
// but we include it here as a fallback
if (page === '1') {
  return Astro.redirect('/', 301);
}

// Validate page number
const pageNum = parseInt(page as string);
if (isNaN(pageNum) || pageNum < 1) {
  return Astro.redirect('/', 301);
}

// Check if page number is valid (not beyond total pages)
const totalPages = Math.ceil(allQuestions.length / 10);
if (pageNum > totalPages) {
  return Astro.redirect('/', 301);
}

// SEO meta data for paginated pages
const title = `الأسئلة – صفحة ${paginationResult.page}`;
const description = `تصفح الأسئلة والأجوبة - الصفحة ${paginationResult.page} من ${paginationResult.pages}. اكتشف المزيد من المحتوى التعليمي والإجابات المفيدة باللغة العربية.`;
---

<BaseLayout title={title} description={description}>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl md:text-4xl font-bold text-zinc-900 dark:text-zinc-100">
        جميع الأسئلة
      </h1>
      <div class="text-sm text-zinc-500 dark:text-zinc-400">
        صفحة {paginationResult.page} من {paginationResult.pages}
      </div>
    </div>
    
    <p class="text-zinc-600 dark:text-zinc-300 text-lg">
      تصفح مجموعة شاملة من الأسئلة والأجوبة المفيدة في مختلف المجالات التقنية
    </p>
    
    <!-- Results summary -->
    <div class="mt-4 text-sm text-zinc-500 dark:text-zinc-400">
      عرض {((paginationResult.page - 1) * 10) + 1} - {Math.min(paginationResult.page * 10, paginationResult.total)} من أصل {paginationResult.total} سؤال
    </div>
  </div>

  <!-- Questions Grid -->
  {paginationResult.items.length > 0 ? (
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-12">
      {paginationResult.items.map((question) => (
        <CardQuestion
          href={`/q/${question.slug}`}
          title={question.data.question}
          description={question.data.shortAnswer}
          date={question.data.pubDate}
          tags={question.data.tags}
          difficulty={question.data.difficulty}
        />
      ))}
    </div>
  ) : (
    <div class="text-center py-12">
      <p class="text-zinc-500 dark:text-zinc-400 text-lg">
        لا توجد أسئلة في هذه الصفحة
      </p>
    </div>
  )}

  <!-- Pagination Navigation -->
  {paginationResult.pages > 1 && (
    <nav class="flex items-center justify-center space-x-2 space-x-reverse" aria-label="تنقل بين الصفحات">
      <div class="flex items-center space-x-1 space-x-reverse">
        
        <!-- Previous Page Button -->
        {paginationResult.hasPrev ? (
          <a
            href={paginationResult.page === 2 ? '/' : `/page/${paginationResult.page - 1}`}
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-500 dark:text-zinc-400 bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-600 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 hover:text-zinc-700 dark:hover:text-zinc-300 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
            aria-label="الانتقال إلى الصفحة السابقة"
          >
            ← السابق
          </a>
        ) : (
          <span class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-300 dark:text-zinc-600 bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-md cursor-not-allowed">
            ← السابق
          </span>
        )}

        <!-- Page Numbers -->
        <div class="flex items-center space-x-1 space-x-reverse mx-4">
          {/* Show first page if not in range */}
          {paginationResult.page > 3 && (
            <>
              <a
                href="/"
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-600 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
                aria-label="الانتقال إلى الصفحة 1"
              >
                1
              </a>
              {paginationResult.page > 4 && (
                <span class="px-2 text-zinc-500 dark:text-zinc-400">...</span>
              )}
            </>
          )}

          {/* Show pages around current page */}
          {Array.from({ length: paginationResult.pages }, (_, i) => i + 1)
            .filter(pageNum => 
              pageNum === 1 || 
              pageNum === paginationResult.pages || 
              Math.abs(pageNum - paginationResult.page) <= 1
            )
            .filter(pageNum => pageNum <= paginationResult.page + 1 && pageNum >= paginationResult.page - 1)
            .map((pageNum) => (
              pageNum === paginationResult.page ? (
                <span
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-indigo-600 dark:bg-indigo-500 border border-indigo-600 dark:border-indigo-500 rounded-md"
                  aria-current="page"
                >
                  {pageNum}
                </span>
              ) : (
                <a
                  href={pageNum === 1 ? '/' : `/page/${pageNum}`}
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-600 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
                  aria-label={`الانتقال إلى الصفحة ${pageNum}`}
                >
                  {pageNum}
                </a>
              )
            ))}

          {/* Show last page if not in range */}
          {paginationResult.page < paginationResult.pages - 2 && (
            <>
              {paginationResult.page < paginationResult.pages - 3 && (
                <span class="px-2 text-zinc-500 dark:text-zinc-400">...</span>
              )}
              <a
                href={`/page/${paginationResult.pages}`}
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-600 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
                aria-label={`الانتقال إلى الصفحة الأخيرة ${paginationResult.pages}`}
              >
                {paginationResult.pages}
              </a>
            </>
          )}
        </div>

        <!-- Next Page Button -->
        {paginationResult.hasNext ? (
          <a
            href={`/page/${paginationResult.page + 1}`}
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-500 dark:text-zinc-400 bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-600 rounded-md hover:bg-zinc-50 dark:hover:bg-zinc-700 hover:text-zinc-700 dark:hover:text-zinc-300 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
            aria-label="الانتقال إلى الصفحة التالية"
          >
            التالي →
          </a>
        ) : (
          <span class="inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-300 dark:text-zinc-600 bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-md cursor-not-allowed">
            التالي →
          </span>
        )}
      </div>
    </nav>
  )}

  <!-- Additional Navigation -->
  <div class="mt-12 text-center">
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a 
        href="/tags" 
        class="inline-flex items-center justify-center px-6 py-3 border border-zinc-300 dark:border-zinc-600 text-base font-medium rounded-lg text-zinc-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
      >
        تصفح حسب الموضوع
      </a>
      <a 
        href="/" 
        class="inline-flex items-center justify-center px-6 py-3 border border-zinc-300 dark:border-zinc-600 text-base font-medium rounded-lg text-zinc-700 dark:text-zinc-300 bg-white dark:bg-zinc-800 hover:bg-zinc-50 dark:hover:bg-zinc-700 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 dark:focus-visible:ring-indigo-400 dark:focus-visible:ring-offset-zinc-950 hover:scale-105"
      >
        العودة للرئيسية
      </a>
    </div>
  </div>
</BaseLayout>
</content>