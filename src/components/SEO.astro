---
export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
}

const { title, description, ogImage, canonical, noindex } = Astro.props;

// Generate canonical URL if not provided
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);

// Default OG image if not provided
const ogImageURL = ogImage || new URL('/favicon.svg', Astro.site);
---

<!-- Charset must be first for proper encoding -->
<meta charset="UTF-8" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageURL} />

<!-- Robots -->
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Viewport -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Favicon and app icons -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/favicon.svg" />
<link rel="manifest" href="/manifest.json" />

<!-- Additional SEO meta tags -->
<meta name="theme-color" content="#4f46e5" />
<meta name="color-scheme" content="light dark" />

<!-- Performance hints -->
<meta name="format-detection" content="telephone=no" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />

<!-- Resource hints for better performance -->
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//fonts.gstatic.com" />

<!-- Structured Data for Organization and WebSite -->
<script type="application/ld+json" set:html={`
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "${Astro.site}#organization",
      "name": "موقع الأسئلة والأجوبة",
      "url": "${Astro.site}",
      "logo": {
        "@type": "ImageObject",
        "url": "${new URL('/favicon.svg', Astro.site)}",
        "width": 32,
        "height": 32
      },
      "description": "موقع متخصص في الأسئلة والأجوبة باللغة العربية، يقدم إجابات شاملة ومفيدة في مختلف المجالات",
      "foundingDate": "2024",
      "sameAs": [
        "https://github.com/soaale"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "",
        "contactType": "customer service",
        "url": "${new URL('/contact', Astro.site)}"
      }
    },
    {
      "@type": "WebSite",
      "@id": "${Astro.site}#website",
      "url": "${Astro.site}",
      "name": "موقع الأسئلة والأجوبة",
      "description": "موقع متخصص في الأسئلة والأجوبة باللغة العربية، يقدم إجابات شاملة ومفيدة في مختلف المجالات",
      "publisher": {
        "@id": "${Astro.site}#organization"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
